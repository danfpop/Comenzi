<Window x:Class="ProiectComenzi.Core.ConfirmWnd"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
       
        mc:Ignorable="d"
        Title="Confirmare " Width="450" Height="124.775" ResizeMode="NoResize" SizeToContent="Height" WindowStartupLocation="CenterScreen" ShowInTaskbar="False">
    <Grid Margin="20,20,10,10">

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>

        </Grid.RowDefinitions>

        <TextBlock x:Name="lblMessage" Text="aici va fi afisat mesajul" />


        <StackPanel Grid.Row="1" Grid.ColumnSpan="2" Margin="0,20,0,0"
                    Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="Nu" Click="btnNu" Padding="20,2"  />
            <Button Content="Da" Click="btnDa" Padding="20,2" Margin="10,0,0,0" />
        </StackPanel>
    </Grid>
</Window>
